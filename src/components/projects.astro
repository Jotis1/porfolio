---
import Project from "./project.astro";
import TitlePattern from "./title-pattern.astro";

import porfolioImage from "../assets/porfolio.png";
import linkJotisImage from "../assets/link_jotis.png";

import background1 from "../assets/background_1.png";
import background2 from "../assets/background_2.png";
---

<main
    id="projects"
    class:list={[
        "relative",
        "sm:bg-radial-[50%_50%_at_50%_50%] from-indigo-950 to-zinc-950 to-50%",
        "bg-radial-[100%_50%_at_50%_50%]",
    ]}
>
    <TitlePattern en="Projects" jp="プロジェクト" />
    <Project
        name="YoruBot"
        technologies={["supabase", "typescript", "bun"]}
        source="https://github.com/yoruverse-dev/discord-bot"
        image={porfolioImage}
        backgroundImage={background1}
    >
        <p slot="description" class="sm:text-base text-sm">
            Created with
            <a
                class="link"
                href="https://discordjs.guide"
                target="_blank"
                rel="noopener noreferrer"
            >
                Discord.js
            </a>,
            <a
                class="link"
                href="https://platform.openai.com"
                target="_blank"
                rel="noopener noreferrer"
            >
                OpenAI
            </a> and
            <a
                class="link"
                href="https://www.langchain.com/"
                target="_blank"
                rel="noopener noreferrer"
            >
                Langchain.
            </a> YoruBot was made for entertaining. Open-source and MIT license.
        </p>
        <section
            slot="content"
            class="relative flex justify-end w-full h-[300px]"
        >
            <figure
                class="bg-zinc-800/30 size-full rounded-2xl backdrop-blur-md p-2.5"
            >
            </figure>
        </section>
    </Project>
    <Project
        name="YoruGacha (WIP)"
        technologies={["tailwind", "next", "bun"]}
        source="https://github.com/yoruverse-dev/gacha"
        reverse
        image={porfolioImage}
        backgroundImage={background1}
    >
        <p slot="description" class="sm:text-base text-sm">
            An <strong class="strong">anime characters gachapon.</strong> Made for
            playing on the web. No trackers, no ads, just fun. Developed with
            <a
                class="link"
                href="https://nextjs.org"
                target="_blank"
                rel="noopener noreferrer"
                >Next.js
            </a> and deployed in my own server.
        </p>
        <section
            slot="content"
            class="relative flex justify-end w-full h-[300px]"
        >
            <figure
                class="bg-zinc-800/30 size-full rounded-2xl backdrop-blur-md p-2.5"
            >
            </figure>
        </section>
    </Project>
    <Project
        name="Byte & Slice (WIP)"
        technologies={["tailwind", "next", "bun"]}
        source="https://github.com/yoruverse-dev/byteandslice"
        image={linkJotisImage}
        backgroundImage={background2}
        live="https://link.jotis.me"
    >
        <p slot="description" class="sm:text-base text-sm">
            My own <strong class="strong">link shortener</strong>, free forever
            version without tracking and <strong class="strong"
                >fully customizable.</strong
            >
        </p>
    </Project>
</main>
